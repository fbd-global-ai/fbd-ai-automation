import json

# Save YouTube channel data
def save_channel_data(channel_name, subscribers, views):
    data = {
        "channel_name": channel_name,
        "subscribers": subscribers,
        "views": views
    }

    with open("channel_data.json", "w") as f:
        json.dump(data, f, indent=4)

    print("Data saved successfully!")


# Load YouTube channel data
def load_channel_data():
    try:
        with open("channel_data.json", "r") as f:
            data = json.load(f)
            return data

    except FileNotFoundError:
        print("No data found!")
        return None


# Example use
save_channel_data("Playeregemert", 150, 4500)
print(load_channel_data())
